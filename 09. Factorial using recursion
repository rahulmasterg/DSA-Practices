/*

Enter any number
6
Factorial of given number = 720

*/

#include<iostream>
using namespace std;

int fact(int n){
    if(n<0){
        return (-1);
    }else if(n==0){
        return 1;
    }else{
        return (n*fact(n-1));
    }
}

int main(){
    int num;
    
    cout<<"Enter any number"<<endl;
    cin>>num;
    
    int factorial=fact(num);
    
    cout<<"Factorial of given number = "<<factorial;
    return 0;
}
