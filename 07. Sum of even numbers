// C++ practice program
/*

Sum of Even numbers between the 1 to n

*/
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int n, sum =0;
    
    cout<<"Enter the value of n"<<endl;
    cin>>n;
    
    for(int i=1; i<=n; i++){
        if(i%2==0){
            sum += i;
        }
    }
    
    cout<<"Sum of Even numbers is: "<<sum;

    return 0;
}
