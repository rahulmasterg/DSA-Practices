/*

Enter any number
17
17 is a prime number


*/


#include<iostream>
using namespace std;
int main(){
    int num,flag=0;
    cout<<"Enter any number"<<endl;
    cin>>num;
    
    for(int i=2; i<num;i++){
        if(num%i==0){
            flag=0;
            break;
        }else{
            flag=1;
        }
    }
    
    if(flag==1){
        cout<<num<<" is a prime number";
    }else{
        cout<<num<<" is not a prime number";
    }
    return 0;
}
